{
  "tasks": {
    "dev": "deno run --allow-read --allow-env --allow-net --watch src/main.ts",
    "start": "deno run --allow-read --allow-env --allow-net src/main.ts"
  },
  "importMap": "./import_map.json",
  "fmt": {
    "files": {
      "include": [
        "src/",
        "test/"
      ]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 120,
      "singleQuote": true,
      "proseWrap": "preserve",
      "semiColons": false
    }
  }
}
